<header 
  class="hero--thematic bg-image-overlay--white <%= get_local_classes local_assigns %>"
  <% if local_assigns.has_key? :hero_image %>
    style="background-image: url('<%= hero_image %>')"
  <% end %>
>
  <div class="hero__container container">
    <div class="hero__content">
      <h1><%= title %></h1>

      <% if local_assigns.has_key? :summary %>
        <p class="hero__intro"><%= summary %></p>
      <% end %>

      <%= link_to button_text, button_url, title: button_text, class: 'button--primary' %>
    </div>

    <div class="hero__stats bg--grey-black sm-home-hero-stats">
      <div>
        <div class="hero__stat-number">
          <counter 
            :total="<%= stat_pas_percent %>" 
            trigger="sm-home-hero-stats" 
            :decimal="1"
          ></counter>
          %
        </div>
        <span class="hero__stat-text">Percent of the ocean covered by protected areas</span>
      </div>
      <div>
        <counter 
          class="hero__stat-number-small"
          :total="<%= stat_pas_total %>" 
          trigger="sm-home-hero-stats" 
          :decimal="1"
        ></counter>
        <span class="hero__stat-text">Marine Protected Areas</span>
      </div>
      <div>
        <div class="hero__stat-number-small">
          <counter 
            :total="<%= stat_pas_km %>" 
            trigger="sm-home-hero-stats" 
            :decimal="1"
          ></counter>
          km<sup>2</sup>
        </div>
        <span class="hero__stat-text">Total area protected</span>
      </div>
    </div>
  </div>
</header>
