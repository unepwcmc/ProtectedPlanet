<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3>Banners</h3>
        <%= link_to 'New Banner', new_admin_banner_path, class: 'btn btn-primary' %>
      </div>
      <div class="card-body">
        <% if @banners.any? %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Status</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @banners.each do |banner| %>
                  <tr>
                    <td><%= banner.title %></td>
                    <td>
                      <% if banner.is_active? %>
                        <span class="badge badge-success">Active</span>
                      <% else %>
                        <span class="badge badge-secondary">Inactive</span>
                      <% end %>
                    </td>
                    <td><%= banner.created_at.strftime('%d %b %Y') %></td>
                    <td>
                      <%= link_to 'Edit', edit_admin_banner_path(banner), class: 'btn btn-sm btn-outline-secondary' %>
                      <%= link_to 'Delete', admin_banner_path(banner), method: :delete, 
                          data: { confirm: 'Are you sure you want to delete this banner?' }, class: 'btn btn-sm btn-outline-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No banners found. <%= link_to 'Create the first banner', new_admin_banner_path %>.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
