<div id="land-stats" class="card--stats">
  <div class="card__header header">
    <img class="header__image" src="<%= asset_url "land-stats.png" %>"/>
    <h3 class="header__text">Area terrestrial</h3>
  </div>

  <div class="card__body">
    <div class="card__column-1 card__cube--land">
      <div data-fill-value="<%= @presenter.percentage_pa_land_cover %>" class="cube__inner card__cube-inner"></div>
    </div>

    <div class="card__column-2">
      <div class="card__row">
        <p class="card__element">
          <span class="test card__number--xxlarge-land">
            <%= @presenter.percentage_pa_land_cover.round(2) %>%
          </span>
          coverage
        </p>
      </div>

      <div class="card__row">
        <p class="card__element">
          <span class="card__number--medium-land">
            <%= commaify @presenter.pa_land_area.round(0) %> km<sup>2</sup>
          </span>
          Land Area Protected
        </p>
        <p class="card__element">
          <span class="card__number--medium-land">
            <%= commaify @presenter.land_area.round(0) %> km<sup>2</sup>
          </span>
          Total Land Area
        </p>
        <p class="card__element">
          <span class="card__number--medium-land">
            <%= commaify @presenter.percentage_nr_land_cover.round(0) %>%
          </span>
          <%= @presenter.nr_version %>th National Report Coverage
        </p>
      </div>

      <% if has_pame_statistics_for(@presenter, :land) %>
        <div class="card__row">
          <p class="card__element">
            <span class="card__number--medium-land-light">
              <i class="fa fa-level-down u-text-muted"></i>
              <%= @presenter.pame_statistic.pame_percentage_pa_land_cover.round(2) %>%
            </span>
            with management effectiveness evaluation
          </p>
          <p class="card__element">
            <span class="card__number--medium-land-light">
              <%= commaify @presenter.pame_statistic.pame_pa_land_area %> km<sup>2</sup>
            </span>
            Area Assessed
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
