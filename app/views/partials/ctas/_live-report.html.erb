<section class="cta--live-report bg--grey-xdark">
  <div class="container cta__container">
    <div class="cta__content">
      <span class="cta__ribbon"><%= t('global.status.updated') %></span>

      <div>
        <h2 class="cta__title h2-big"><%= cms_fragment_render(:title, cta_live_report) %></h2>
        <p class="text-intro"><%= cms_fragment_render(:summary, cta_live_report) %></p>
      </div>

      <%= link_to t('ctas.live_report.button'), cms_fragment_render(:link, cta_live_report), target: '_blank', class: 'button--accent' %>
    </div>
  </div>
</section>
