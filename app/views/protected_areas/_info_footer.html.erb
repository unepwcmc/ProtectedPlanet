<aside class="info-box info-box--fill-color">
  <section class="info-box__column">
    <h2 class="info-box__header header-with-delimiter header-with-delimiter--bold">Citation</h2>
    <p class="info-box__body">
    UNEP-WCMC (<%= Date.today.year %>). Protected Area Profile for <%= @protected_area.name %> from the World Database of Protected Areas, <%= Date.today.strftime("%B %Y") %>. Available at: <a href="/">www.protectedplanet.net</a>
    </p>
  </section>

  <section class="info-box__column">
    <h2 class="info-box__header header-with-delimiter header-with-delimiter--bold">References</h2>
    <div class="info-box__body">
      <div class="reference">
        <h3 id="ref1" class="reference__title">(Ref 1)</h3>
        <p class="reference__body"> Nam vitae dolor iaculis lectus commodo tincidunt ut eget risus. Sed et lobortis tellus.</p>
      </div>
    </div>
  </section>

  <section class="info-box__column">
    <h2 class="info-box__header header-with-delimiter header-with-delimiter--bold">Downloads</h2>
    <div class="info-box__body info-box__body--no-padding">
      <div class="info-box__row">
        <button class="js-download-btn info-box__link u-only-desktop tooltip__trigger js-trigger">
          <i class="info-box__link-icon fa fa-download"></i>Download site GIS file
          <%= download_dropdown(@protected_area.wdpa_id, 'protected_area', (types rescue [:csv, :kml, :shp])) %>
        </button>
        <%= link_to url_for(action: :show, id: @protected_area.wdpa_id, format: :pdf), class: 'info-box__link' do %>
          <i class="info-box__link-icon fa fa-file-pdf-o"></i>Download site
        <% end %>
      </div>
    </div>
  </section>
</aside>
