<div>
  <div class="col-six login-form">
    <%= render 'shared/flash' %>
    <article>
      <h1>Register to Protected Planet</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'login-input' %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Password (8 Characters Minimum)' %>
          <%= f.password_field :password, autocomplete: "off", class: 'login-input' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'login-input' %>
        </div>

        <%= f.submit "Sign up", class: 'btn' %>
      <% end %>

      <div class="shared-links"><%= render "devise/shared/links" %></div>
    </article>
  </div>

  <div class="col-six login-right-panel">
    <%= render 'devise/login_text' %>
  </div>
</div>


