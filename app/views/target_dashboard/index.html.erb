<%= render partial: "./layouts/partials/hero-small", locals: { 
  classes: 'thematical-area' ,
  hero_image: cms_fragment_render(:theme_image, @cms_page),
  title: @cms_page.label
} %>

<main v-cloak>
  <section class="section-padding">
    <div class="container--desktop-up">

      <agile class="agile--basic" :options="<%= get_config_carousel_global %>" >
        <% @global_stats.each do |stat| %>
          <div class="agile__slide">
            <div class="agile__slide-content">
              <tooltip 
                :on-hover="false" 
                text="<%= getTooltipText(stat[:id]) %>"
                class="agile__tooltip"
              >
                <i class="icon--info-circle block"></i>
              </tooltip>

              <h3 class="agile__slide-title"><%= stat[:title] %></h3>
              
              <% stat[:charts].each do |chart| %>
                <chart-dial
                  title="<%= chart[:title] %>"
                  colour="<%= chart[:colour] %>"
                  :dial-value="<%= chart[:value] %>"
                  <% if chart[:target] != nil %>
                    :dial-target="<%= chart[:target] %>" 
                  <% end %> 
                ></chart-dial>
              <% end %>
            </div>
          </div>
        <% end %>
      </agile>
    </div>
  </section>

  <section class="section-padding--bottom">
    <div class="container--desktop-up">
      <target-11-dashboard
        class="sm-trigger-sticky-bar"
        :select="<%= @search %>"
        :table-headings="<%= @country_and_regions_headings %>" 
        :table-data-src="<%= @endpoint.to_json %>"
        :tooltip-array="<%= t("thematic_area.target_11_dashboard.tooltips").to_json %>"
      >
      </target-11-dashboard>
    </div>
  </section>
</main>

<%= render "partials/ctas/live-report" %>