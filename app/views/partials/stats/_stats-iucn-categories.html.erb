<div class="card--stats-iucn card--stats-half">
  <h2 class="card__h2"><%= t('stats.iucn-categories.title') %></h2>

  <am-chart-pie
    class="am-chart--pie--iucn"
    :dataset="<%= @iucn_categories_chart %>"
    :doughnut="true"
  ></am-chart-pie>

  <ul class="list--underline">
    <% iucn_categories.each_with_index do |category, i| %>
      <li class="list__li">
        <i class="list__icon"></i>
        <span class="list__title"><%= "#{i+1}. #{category['iucn_category_name']}" %></span>
        <span class="list__value">
          <%= category['count'] %>, <%= category['percentage'].to_f.round(2) %>%
        </span>
        <%= link_to 'View list', 
          iucn_link(category)[:link], 
          title: iucn_link(category)[:title], 
          class: 'list__right list__a' 
        %>
      </li>
    <% end %>
  </ul>
</div>