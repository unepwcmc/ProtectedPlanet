<div class="page--resource page-padding">
  <div class="container--medium">
    <p class="page__date">
      <%= cms_fragment_content(:published_date, @cms_page).strftime('%d %B %y') %>
    </p>

    <h1 class="page__h1"><%= @cms_page.label %></h1>
  </div>

  <section class="container--medium cms-wysiwyg">
    <%= cms_fragment_render("content") %>
  </section>
  
  <section class="container--medium page-padding--top">
    <% unless get_resource_links.empty? %>
      <ul class="list--links">
        <% get_resource_links.each do |link| %>
          <li class="list__li">
            <span><%= link[:text] %></span>
            <%= link_to link[:button], link[:url], title: link[:text], class: "list__a #{link[:classes]}", target: '_blank' %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>
</div>

<div class="flex flex-h-center page-padding--bottom">
  <%= render "partials/social/sharing" %>
</div>

<section class="container section-padding--bottom">
  <%= render "partials/cards/resources" %>
</section>

<%= render "partials/ctas/live-report" %>