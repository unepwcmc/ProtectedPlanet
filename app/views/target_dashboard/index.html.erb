<div id="new-styles" class="container--profile container--push-bottom">
  <header class="hero--thematic-area center">
    <h1 class="hero__title hero__title--article"><%= t('thematic_area.target_11_dashboard.title') %></h1> 
  </header>

  <main>
    <section>
      <h2><%= t('thematic_area.target_11_dashboard.subtitle_1') %></h2>

      <carousel class="carousel--basic" :show-arrows="false" :show-all-indicators="true">
        <% @global_stats.each do |stat| %>
          <carousel-slide>

            <tooltip 
              :on-hover="false" 
              text="<%= t("thematic_area.target_11_dashboard.tooltips.#{stat[:id]}") %>"
              class="carousel__tooltip"
            >
              <i class="icon--info-circle block"></i>
            </tooltip>

            <h3><%= stat[:title] %></h3>
            
            <% stat[:charts].each do |chart| %>
              <chart-dial
                title="<%= chart[:title] %>"
                colour="<%= chart[:colour] %>"
                :dial-value="<%= chart[:value] %>"
                :dial-target="<%= chart[:target] %>" 
              ></chart-dial>
            <% end %>
          </carousel-slide>
        <% end %>
      </carousel>
    </section>

    <section>
      <h2><%= t('thematic_area.target_11_dashboard.subtitle_2') %></h2>

      <p>sticky bar</p>

      <div style="width: 222px;">
        <chart-row-target :value="40" :target="60" title="Terrestrial" colour="terrestrial"></chart-row-target>
        <chart-row-target :value="56" :target="61" title="Marine" colour="marine"></chart-row-target>
        <chart-row-target :value="16" :target="37" title="Global" colour="global"></chart-row-target>
      </div>
    </section>
  </main>
</div>