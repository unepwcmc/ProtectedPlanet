<tabs
  class="tabs--hero"
  ga-id="<%= ga_id %>"
  :tab-triggers="<%= tabs %>"
>
  <template slot-scope="slotProps">
    <tab-target :id="1" :selected-id="slotProps.selectedId">
      <section class="container--medium spacer-small--bottom">
        <%= cms_fragment_render("tab-content-1") %>
      </section>
     <%#
          As of 14May2025 NC decided not to show the chart
          protected_areas.to_json is in app/helpers/equity_helper.rb
          <section class="container">
            <select-equity :protected-areas="<%= protected_areas.to_json % >"></select-equity>
          </section>
      %>
    </tab-target>

    <tab-target :id="2" :selected-id="slotProps.selectedId">
      <section class="container--medium">
        <%= cms_fragment_render("tab-content-2") %>
      </section>
    </tab-target>
  </template>
</tabs>