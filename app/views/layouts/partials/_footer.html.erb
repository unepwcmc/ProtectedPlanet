<% unless @for_pdf %>
  <% get_footer_links %>

  <footer class="footer bg--primary section-padding">
    <div class="container footer__container">
      <div class="footer__col">
        <%= image_tag 'logos/protected-planet.svg', alt: 'Protected Planet logo', class: 'logo--protected-planet' %>
      </div>

      <div class="footer__col">
        <h3><%= t('global.footer.title1') %></h3>
        <%= link_to @links['wdpa'][:title], @links['wdpa'][:url], title: @links['wdpa'][:title], class: 'footer__link' %>
        <%= link_to @links['oecms'][:title], @links['oecms'][:url], title: @links['oecms'][:title], class: 'footer__link' %>
        <%= link_to @links['resources'][:title], @links['resources'][:url], title: @links['resources'][:title], class: 'footer__link' %>
      </div>

      <div class="footer__col">
        <h3><%= t('global.footer.title2') %></h3>
        <%= link_to @links['legal'][:title], @links['legal'][:url], title: @links['legal'][:title], class: 'footer__link' %>
        <%= link_to @links['about'][:title], @links['about'][:url], title: @links['about'][:title], class: 'footer__link' %>
      </div>

      <div class="footer__col">
        <h3><%= t('global.footer.title3') %></h3>
        <div class="social--share">
          <%= create_sharing_twitter_link %>
          <%= create_sharing_facebook_link %>
          <%= create_sharing_linkedin_link %>
        </div>

        <h3><%= t('global.footer.title4') %></h3>
        <%= link_to 'protectedareas@unep-wcmc.org', 'mailto:protectedareas@unep-wcmc.org', title: 'protectedareas@unep-wcmc.org', class: 'footer__link' %>
      </div>

      <div class="footer__col">
        <div>
          <%= link_to 'http://www.iucn.org', title: 'here', target: '_blank' do %>
            <%= image_tag 'logos/iucn.svg', alt: 'IUCN logo', class: 'footer__logo-partner' %>
          <% end %>

          <%= link_to 'http://unep-wcmc.org', title: 'here', target: '_blank' do %>
            <%= image_tag 'https://s3.amazonaws.com/wcmc.logo/UNEP_WCMC_logo_white.svg', alt: 'UN Environment World Conservation Monitoring logo', class: 'footer__logo-partner' %>
          <% end %>
        </div>

        <span>&copy; ProtectedPlanet 2014-<%= Date.today.year %>. All rights reserved</span>
      </div>
    </div>
  </footer>
<% end %>
