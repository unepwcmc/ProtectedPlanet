<%

@options = []

@cms_page.children.published.each do |child|

  object = {}

  object[:title] = child.label
  object[:text] = cms_block_content_render(:text, child)
  object[:url] = cms_block_content(:url, child)
  object[:image] = cms_block_content(:image, child).file().url(:dropdownImage) if(cms_block_content(:image, child).try(:file) && cms_block_content(:image, child).try(:file).url(:dropdownImage))

  @options.push(object)

end

%>

<select-with-content :options="<%= @options.to_json %>" ></select-with-content>