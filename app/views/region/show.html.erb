<%= render partial: "./partials/bars/topbar-secondary", locals: { download_options: @download_options } %>

<div class="page--region bg--grey-xlight page-padding">
  <div class="container">
    <section class="page__section--overview-map">
      <%= render partial: "partials/stats/stats-overview", locals: { 
        chart_point_poly: @presenter.chart_point_poly,
        legend_map: map_legend,
        title: @region.name,
        total_countries: spaceify(@region.countries.count),
        total_oecm: @total_oecm,
        total_pame: @total_pame,
        total_points_percentage: @presenter.total_points_percentage,
        total_polygons_percentage: @presenter.total_polygons_percentage,
        total_wdpa: @total_wdpa,
      } %>

      <div class="map--region">
        <%= render partial: "partials/maps/header", locals: {
          map: @map,
          map_options: @map_options
        } unless @for_pdf %>
      </div>
    </section>
    
    <section>
      <div class="page__2cols">
        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @presenter.terrestrial_stats, 
          type: 'terrestrial' 
        } %>

        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @presenter.marine_stats, 
          type: 'marine' 
        } %>
      </div>

      <%= render "partials/messages/message-warning-stats" %>
    
      <div class="page__2cols">
        <%= render partial: "partials/stats/stats-iucn-categories", locals: { iucn_categories: @iucn_categories } %>
        
        <%= render "partials/stats/stats-governance", { governance_types: @governance_types} %>
      </div>

      <%= render partial: "partials/stats/stats-sources", locals: { sources: @sources } %>
      
      <%= render partial: "partials/stats/stats-designations", locals: { designations: @designations } %>

      <%= render partial: "partials/cards/sites", locals: { 
        cards: @region_pas,
        title: @region.name + ' ' + t('region.protected_areas'),
        url: @regionPasViewAllUrl
      } %>
    </section>

    <section class="spacer-small--bottom">
      <%= render partial: "partials/messages/message-citation", locals: { title: @region.name } %>
    </section>
  </div>
</div>

