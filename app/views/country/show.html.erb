<div class="bg--grey-xlight">
  <div class="container">
    
    <section class="flex">
      <%= render partial: "partials/stats/stats-overview", locals: { 
        flag: @flag_path[0],
        title: @country.name,
        total_oecm: @total_oecm,
        total_pame: @total_pame,
        total_points_percentage: @country_presenter.total_points_percentage,
        total_polygons_percentage: @country_presenter.total_polygons_percentage,
        total_wdpa: @total_wdpa,
      } %>

      <div>
        MAP
      </div>
    </section>

    <section>
      <div class="card--stats-wrapper">
        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @country_presenter.terrestrial_stats, 
          type: 'terrestrial' 
        } %>

        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @country_presenter.marine_stats, 
          type: 'marine' 
        } %>
      </div>

      <%= render "partials/messages/message-warning-stats" %>

      <div class="flex flex-h-between">
        <%= render partial: "partials/stats/stats-iucn-categories", locals: { iucn_categories: @iucn_categories } %>
        
        <%= render "partials/stats/stats-governance", { governance_types: @governance_types} %>
      </div>

      <%= render partial: "partials/stats/stats-sources", locals: { sources: @sources } %>

      <%= render partial: "partials/stats/stats-designations", locals: { designations: @country_designations } %>

      <div class="card--stats">
        <div class="card--stats-wrapper-chart">
          <h2><%= t('stats.growth.title') %></h2>

          <am-chart-line :data="<%= @coverage_growth.to_json %>">
          </am-chart-line>
          
          <p class="text--small"><%= t('stats.coverage-chart-smallprint') %></p>
        </div>
      </div>
      
      <%= render partial: "partials/cards/sites", locals: { cards: @sites } %>

      <%= render partial: "partials/messages/message-citation", locals: { title: @country.name } %>
    </section>
  </div>
</div>

<h1>related countries</h1>      
<% if @country.children.any? || @country.parent.present? %>
  <section class="fact">
    <h2 class="fact__header">Related countries & territories</h2>
    <div class="fact__body">

      <% if @country.children.any? %>
        <p class="fact__subheader"><i class="fa fa-level-down"></i> Child countries & territories</p>
        <table class="table js-sortable-table">
          <thead>
            <tr class="table__header">
              <th class="table__column table__column--with-sorting">Name</th>
              <th class="table__column table__column--with-sorting">Code</th>
            </tr>
          </thead>
          <tbody>
            <% @country.children.each do |child_country| %>
              <tr class="table__row">
                <td class="table__label table__label--link"><%= link_to child_country.name, country_path(child_country.iso) %></td>
                <td class="table__value table__value--link"><%= link_to child_country.iso_3, country_path(child_country.iso) %></td>
              </tr>
            <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>

      <% if @country.parent.present? %>
        <p class="fact__subheader"><i class="fa fa-level-down"></i> Parent countries & territories</p>
        <table class="table js-sortable-table">
          <thead>
            <tr class="table__header">
              <th class="table__column table__column--with-sorting">Name</th>
              <th class="table__column table__column--with-sorting">Code</th>
            </tr>
          </thead>
          <tbody>
            <tr class="table__row">
              <td class="table__label table__label--link"><%= link_to @country.parent.name, country_path(@country.parent.iso) %></td>
              <td class="table__value table__value--link"><%= link_to @country.parent.iso_3, country_path(@country.parent.iso) %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </section>
<% end %>


<h1>malaysia docs</h1>
<% if is_malaysia? %>
  <div class="info-box__row">
    <div class='header-with-delimiter no-border'>Protected areas documentation</div>
    <% malaysia_documents.map do |doc| %>
      <a href="<%= doc[:url] %>" class="info-box__link">
        <i class="info-box__link-icon fa fa-file-pdf-o"></i><%= doc[:name] %>
      </a>
    <% end %>
  </div>
<% end %>