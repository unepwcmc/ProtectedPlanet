<header class="hero--basic <%= get_local_classes local_assigns %>">
  <div class="hero__container container">

    <div class="hero__content">
      <h1><%= title %></h1>

      <% if local_assigns.has_key? :summary %>
        <p class="hero__intro"><%= summary %></p>
      <% end %>
      
      <% if local_assigns.has_key? :button_area_search_url %>
        <%= link_to button_area_search_text, button_area_search_url, title: t('global.links.visit', link: button_area_search_url), class: 'button--primary' %>
      <% end %>

      <div>Download vue component</div>
    </div>
  </div>
</header>