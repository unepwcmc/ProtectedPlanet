<% get_all = false if local_assigns[:get_all].nil? %>
<% get_resource_cards get_all %>

<div class="cards--resources">
  <div class="flex flex-v-center flex-h-between">
    <h2><%= @items[:title] %></h2>
    
    <% if @items[:url] %>
      <%= link_to t('global.button.all'), @items[:url], title: t('global.button.all'), class: 'button--all' %>
    <% end %>
  </div>

  <div class="cards__cards">
    <% @items[:cards].each do |card| %>
      <% if link_to_page?(card) %>
        <%= link_to card[:url], title: card[:label], class: 'card card--link' do %>
          <p class="card__date"><%= card[:created_at] %></p>
          <h3><%= card[:label] %></h3>
          <p><%= card[:intro] %></p>
        <% end %>
      <% else %>
        <div class="card">
          <p class="card__date"><%= card[:created_at] %></p>
          <h3><%= card[:label] %></h3>
          <p><%= card[:summary] %></p>
          
          <% if card[:file] %>
            <%= link_to t('global.button.download'), card[:file], title: t('global.button.download'), class: 'button--download' %>
          <% elsif card[:link] %>
            <%= link_to t('global.button.link'), card[:link], title: card[:link_title], class: 'button--link-external' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>