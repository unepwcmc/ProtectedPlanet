<section class="fact">
  <h2 class="fact__header">Governance types<i class="fact__external-link fa fa-external-link-square"></i></h2>
  <div class="fact__body">
    <table class="table js-sortable-table">
      <thead>
        <tr class="table__header">
          <th class="table__column table__column--with-sorting">Name</th>
          <th class="table__column table__column--with-sorting">Governance type</th>
          <th class="table__column table__column--with-sorting">Count</th>
          <th class="table__column table__column--with-sorting">%</th>
        </tr>
      </thead>
      <tbody>
        <% @location.protected_areas_per_governance.each do |row| %>
          <tr class="table__row">
            <td class="table__label table__label--link"><%= link_to row["governance_name"], search_url("#{@location.class.name.downcase}:" => @location.name, governance: row["governance_name"], main: @location.class.name.downcase.to_sym) %></td>
            <td class="table__value"><%= row["governance_type"] %></td>
            <td class="table__value"><%= row["count"] %></td>
            <td class="table__value"><%= row["percentage"].to_f.round(2) %></td>
          </tr>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</section>
