<% get_resource_cards %>

<div class="cards--resources">
  <div class="flex flex-v-center flex-h-between">
    <h2><%= @cards[:title] %></h2>

    <%= link_to t('global.button.all'), @cards[:url], title: t('global.button.all'), class: 'button--all' %>
  </div>

  <div class="cards__cards">
    <% @cards[:cards].each do |card| %>
      <% if link_to_page?(card) %>
        <%= link_to card[:url], title: card[:label], class: 'card card--link' do %>
          <p class="card__date"><%= card[:created_at] %></p>
          <h3><%= card[:label] %></h3>
          <p><%= card[:intro] %></p>
        <% end %>
      <% else %>
        <div class="card">
          <p class="card__date"><%= card[:created_at] %></p>
          <h3><%= card[:label] %></h3>
          <p><%= card[:intro] %></p>
          
          <% if card[:pdf] %>
            <%= link_to t('global.button.download'), card[:pdf], title: t('global.button.download'), class: 'button--download' %>
          <% elsif card[:external_link] %>
            <%= link_to t('global.button.link'), card[:external_linkd], title: card[:external_link_title], class: 'button--link-external' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>