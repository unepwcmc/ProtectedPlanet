<section class="fact">
  <h2 class="fact__header">Number of sources</h2>
  <div class="fact__body">
    <table class="table">
      <% total = 0 %>
      <% @presenter.sources_per_jurisdiction.each do |k,v| %>
        <% total += v.to_i %>
        <tr class="table__row">
          <td class="table__label">For <%= k.to_s.capitalize %> designations</td>
          <td class="table__value"><%= v.to_i %></td>
        </tr>
      <% end %>

      <tr class="table__row table__row--last">
        <td class="table__label">TOTAL</td>
        <td class="table__value"><%= total %></td>
      </div>
    </table>
  </div>
</section>
