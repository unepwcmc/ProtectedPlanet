<div class="social--follow">
  <% %w[twitter facebook linkedin].each do |social_medium| %>
    <% translate_path = format('social.follow.%<key>s', { key: social_medium }) %>
    <%= link_to '', t("#{translate_path}.url"),
      title: t("#{translate_path}.title"),
      class: "social__icon--#{social_medium}",
      target: '_blank'
    %>
  <% end %>
</div>