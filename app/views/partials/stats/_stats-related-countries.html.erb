<div class="card--stats-related">
  <h2><%= t('stats.related-countries.title') %></h2>

  <% if country_children %>
    <ul class="list--underline">
      <% country_children.each do |child| %>
        <li class="list__li">
          <span class="list__title"><%= child['name'] %></span>
          <span class="list__value"><%= child['iso_3'] %></span>
          <%= link_to 'View', country_path(child['iso_3']), title: '', class: 'list__right list__a' %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if country_parent %>
    <ul class="list--underline">
      <li class="list__li">
        <span class="list__title"><%= country_parent['name'] %></span>
        <span class="list__value"><%= country_parent['iso_3'] %></span>
        <%= link_to 'View', country_path(country_parent['iso_3']), title: '', class: 'list__right list__a' %>
      </li>
    </ul>
  <% end %>
</div>