<div class="bg--grey-xlight">
  <div class="container">
    
    <section class="flex">
      <div class="card--stats card--stats--dark">
        <div class="flex flex-v-center">
          <i class="card__flag icon--flag-outline" style="background-image:url('<%= @flag_path[0] %>');"></i>
          <h1><%= @country.name %></h1>
        </div>
        
        <%= render partial: "partials/stats/stats-general", locals: { 
          total_oecm: @total_oecm,
          total_pame: @total_pame,
          total_points_percentage: @total_points_percentage,
          total_polygons_percentage: @total_polygons_percentage,
          total_wdpa: @total_wdpa,
        } %>
      </div>
      <div>
        MAP
      </div>
    </section>

    <section>
      <div class="flex flex-h-between">
        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @terrestrial_stats, 
          type: 'terrestrial' 
        } %>

        <%= render partial: "partials/stats/stats-coverage", locals: { 
          stats: @marine_stats, 
          type: 'marine' 
        } %>
      </div>

      <%= render "partials/messages/message-warning-stats" %>

      <div class="flex flex-h-between">
        <%= render partial: "partials/stats/stats-iucn-categories", locals: { iucn_categories: @iucn_categories } %>
        
        <%= render "partials/stats/stats-governance", { governance_types: @governance_types} %>
      </div>

      <%= render partial: "partials/stats/stats-sources", locals: { sources: @sources } %>

      <%= render partial: "partials/stats/stats-designations", locals: { designations: @designations } %>

      <div class="card--stats">
        <h1>Chart - Growth in protected area coverage</h1>
      </div>
      
      <%= render partial: "partials/cards/sites", locals: { cards: @wdpa } %>

      <%= render partial: "partials/messages/message-citation", locals: { title: @country.name } %>
    </section>
  </div>
</div>


  <%#= render "hero" %>
  <%#= render "factsheet" %>
  <%#= render "info_box" %>

