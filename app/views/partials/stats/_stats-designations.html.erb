<div class="cards--stats">
  <h2>Designations</h2>

  <div>Chart</div>
  
  <div class="flex flex-h-between">
    <% %w[National Regional International].each do |level| %>
      <div class="card__third">
        <div class="flex flex-h-between flex-v-center">
          <h3><%= level %> designations</h3>
          <span><%= @designations_by_jurisdiction[level].count rescue 0 %></span>
        </div>

        <% if jurisdiction = Jurisdiction.find_by_name(level) %>
          <ul class="card__ul">
            <% location.protected_areas_per_designation(jurisdiction).each do |row| %>
              <li class="card__li">
                <%= link_to row["designation_name"], search_url("#{location.class.name.downcase}" => location.name, designation: row["designation_name"], main: location.class.name.downcase.to_sym) %>
                <%= row["count"] %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</li>