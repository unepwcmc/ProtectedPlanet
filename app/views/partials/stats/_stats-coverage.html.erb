<div class="card--stats card--stats--half">
  <h3><%= t("stats.#{type}-title") %></h3>

  <div class="flex">
    <div class="card__chart">
      <div class="chart--square">
        <span 
          class="chart__area theme--green" 
          style="width: <%= get_square_side(stats[:protected_percentage]) %>%; height: <%= get_square_side(stats[:protected_percentage]) %>%;"
        ></span>
      </div>
    </div>

    <div>
      <%= stats[:protected_percentage] %>% <%= t("stats.coverage") %>

      <div>
        <p>
          <span><%= commaify stats[:protected_km2] %> km<sup>2</sup></span> <%= t("stats.#{type}-protected") %>
        </p>
        
        <p>
          <span><%= stats[:total_km2] %> km<sup>2</sup></span> <%= t("stats.#{type}-total") %>
        </p>
        
        <% if stats[:protected_national_report] && stats[:national_report_version] %>
          <p>
            <span><%= stats[:protected_national_report] %>%</span>
            <%= stats[:national_report_version] %><%= t("stats.nr-report-title") %>
          </p>
        <% end %>
        
        <% if stats[:pame_percentage] &&  stats[:pame_km2] %>
          <div class="card__pame">
            <p>
              <span><%= stats[:pame_percentage] %>%</span> <%= t("stats.pame.with-assessments") %>
            </p>
            <p>
              <span><%= stats[:pame_km2] %> km<sup>2</sup></span> <%= t("stats.pame.areas-assessed") %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>