<%= form_tag search_path do %>
  <%= hidden_field_tag 'search_term', @search.search_term %>
  <%= hidden_field_tag 'filters', @search.options[:filters].to_json %>
  <%= select_tag 'project_id', options_from_collection_for_select(current_user.projects, :id, :name), include_blank: true %>
  <%= submit_tag 'Add to Your Projects' %>
<% end %>